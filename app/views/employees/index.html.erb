<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table class='table table-responsive table-striped'>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Intials</th>
      <th>Date of Birth</th>
      <th>BSN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.initials %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.bsn %></td>
        <td style="padding: 2px; margin; 0px">
          <%= link_to employee, class: 'btn btn-sm btn-default' do %>
            <i class="glyphicon glyphicon-facetime-video"></i>
          <% end %>  
        </td>
        <td style="padding: 2px; margin; 0px">
          <%= link_to edit_employee_path(employee), class: 'btn btn-sm btn-default' do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>  
        </td>
        <td style="padding: 2px; margin; 0px">
          <%= link_to employee, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-default' do %>
            <i class="glyphicon glyphicon-remove-sign"></i>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
  
  <tfoot>
    <%= link_to new_employee_path, class: 'btn btn-default' do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
  </tfoot>
</table>

<br>