<h1>Contracts</h1>

<table class='table table-responsive table-striped'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Employee</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Function</th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.id %></td>
        <td><%= contract.employee.full_name %></td>
        <td><%= contract.start_date %></td>
        <td><%= contract.end_date %></td>
        <td><%= contract.function %></td>
      
        <td style="padding: 2px; margin; 0px">
          <div>
            <%= link_to contract, class: 'btn btn-sm btn-default' do %>
              <i class="glyphicon glyphicon-facetime-video"></i>
            <% end %>  

          <%= link_to edit_contract_path(contract), class: 'btn btn-sm btn-default' do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>  

          <%= link_to contract, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-sm btn-default' do %>
            <i class="glyphicon glyphicon-remove-sign"></i>
          <% end %>  
        
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
  
  <tfoot>
    <tr>
      <td>
        <%= link_to new_contract_path, class: 'btn btn-default' do %>
          <i class="glyphicon glyphicon-plus"></i> New
        <% end %>
      </td>
    </tr>    
  </tfoot>
</table>

<br>


    